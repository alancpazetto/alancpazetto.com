  }

  .icons {
    display: flex;
    gap: 1.5rem;
    margin-top: 4rem;

    img {
      filter: invert(1);
      width: 24px;
      height: 24px;
      object-fit: contain;
    }
  }

  .section {
    margin-top: 4rem;

